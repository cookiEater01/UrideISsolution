@model Uride.Models.Vozilo

@{
    ViewData["Title"] = "Urejanje";
}

<h2>Urejanje</h2>

<h4>Vozilo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvtoId" />
            <div class="form-group">
                <label asp-for="Znamka" class="control-label"></label>
                <input asp-for="Znamka" class="form-control" />
                <span asp-validation-for="Znamka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenaKm" class="control-label"></label>
                <input asp-for="CenaKm" class="form-control" />
                <span asp-validation-for="CenaKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StSedezev" class="control-label"></label>
                <input asp-for="StSedezev" class="form-control" />
                <span asp-validation-for="StSedezev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
