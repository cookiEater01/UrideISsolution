@model Uride.Models.Vozilo

@{
    ViewData["Title"] = "Podrobnejši podatki";
}

<h2>Podrobnejši podatki</h2>

<div>
    <h4>Vozilo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Znamka)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Znamka)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt>
            Cena prevoženega km
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CenaKm)
        </dd>
        <dt>
            Število sedežev
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StSedezev)
        </dd>
        <dt>
            Vozniki z tem modelom:
        </dt>
    </dl>
    <table class="table">
        <tr>
            <th>
                Ime
            </th>
            <th>
                Priimek
            </th>
        </tr>

        @foreach (var dr in Model.Voznik)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => dr.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dr.Priimek)
                </td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AvtoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
