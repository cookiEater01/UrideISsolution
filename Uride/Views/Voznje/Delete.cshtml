@model Uride.Models.Voznja

@{
    ViewData["Title"] = "Izbris";
}

<h2>Izbris</h2>

<h3>Ali ste prepričani da želite izbrisati sledeči zapis?</h3>
<div>
    <h4>Voznja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DolzinaPoti)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DolzinaPoti)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Uporabnik)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Uporabnik.MobStev)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Voznik)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Voznik.Ime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VoznjaId" />
        <input type="submit" value="Izbriši" class="btn btn-default" /> |
        <a asp-action="Index">Nazaj na seznam</a>
    </form>
</div>
