@model Uride.Models.Voznja

@{
    ViewData["Title"] = "Ustvari";
}

<h2>Ustvari</h2>

<h4>Voznja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UporabnikId" class="control-label"></label>
                <select asp-for="UporabnikId" class ="form-control" asp-items="ViewBag.UporabnikId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VoznikId" class="control-label"></label>
                <select asp-for="VoznikId" class ="form-control" asp-items="ViewBag.VoznikId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DolzinaPoti" class="control-label"></label>
                <input asp-for="DolzinaPoti" class="form-control" />
                <span asp-validation-for="DolzinaPoti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ustvari" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
