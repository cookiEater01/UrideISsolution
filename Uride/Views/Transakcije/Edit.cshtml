@model Uride.Models.Transakcija

@{
    ViewData["Title"] = "Urejanje";
}

<h2>Urejanje</h2>

<h4>Transakcija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StRacuna" />
            <div class="form-group">
                <label asp-for="Znesek" class="control-label"></label>
                <input asp-for="Znesek" class="form-control" />
                <span asp-validation-for="Znesek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idvoznje" class="control-label"></label>
                <select asp-for="Idvoznje" class="form-control" asp-items="ViewBag.Idvoznje"></select>
                <span asp-validation-for="Idvoznje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
