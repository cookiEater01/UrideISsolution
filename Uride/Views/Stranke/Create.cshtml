@model Uride.Models.Stranka

@{
    ViewData["Title"] = "Ustvari";
}

<h2>Ustvari</h2>

<h4>Stranka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priimek" class="control-label"></label>
                <input asp-for="Priimek" class="form-control" />
                <span asp-validation-for="Priimek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naslov" class="control-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobStev" class="control-label"></label>
                <input asp-for="MobStev" class="form-control" />
                <span asp-validation-for="MobStev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpImeId" class="control-label"></label>
                <input asp-for="UpImeId" value=@ViewBag.UpImeIda class="form-control" />
                <span asp-validation-for="UpImeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ustvari" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
